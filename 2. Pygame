import pygame
import sys

# Initialize Pygame
pygame.init()

# Set up display
width, height = 400, 400
screen = pygame.display.set_mode((width, height))
pygame.display.set_caption("Shapes Drawing")

# Colors
blue = (0, 0, 255)
green = (0, 255, 0)
black = (0, 0, 0)

# Run the game loop
while True:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

    # Draw Polygon
    polygon_vertices = [(146, 0), (291, 106), (236, 277), (56, 277), (0, 106)]
    pygame.draw.polygon(screen, blue, polygon_vertices)

    # Draw Line
    pygame.draw.line(screen, green, (60, 300), (120, 300), 4)

    # Draw Circle
    pygame.draw.circle(screen, green, (300, 50), 20)

    # Draw Ellipse
    ellipse_rect = pygame.Rect(300, 250, 40, 80)
    pygame.draw.ellipse(screen, black, ellipse_rect, 1)

    # Draw Rectangle
    rectangle_rect = pygame.Rect(150, 300, 100, 50)
    pygame.draw.rect(screen, black, rectangle_rect)

    # Update the display
    pygame.display.flip()

    # Control the frame rate
    pygame.time.Clock().tick(30)
