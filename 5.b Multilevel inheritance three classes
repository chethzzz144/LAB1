class Vehicle:
    def __init__(self, brand, model):
        self.brand = brand
        self.model = model

    def display_info(self):
        return f"{self.brand} {self.model}"


class Car(Vehicle):
    def __init__(self, brand, model, fuel_type):
        super().__init__(brand, model)
        self.fuel_type = fuel_type

    def display_car_info(self):
        return f"{self.display_info()} - Fuel Type: {self.fuel_type}"


class SportsCar(Car):
    def __init__(self, brand, model, fuel_type, top_speed):
        super().__init__(brand, model, fuel_type)
        self.top_speed = top_speed

    def display_sports_car_info(self):
        return f"{self.display_car_info()} - Top Speed: {self.top_speed} mph"


# Example usage:
vehicle1 = Vehicle("Toyota", "Camry")
print(vehicle1.display_info())

car1 = Car("Honda", "Civic", "Gasoline")
print(car1.display_car_info())

sports_car1 = SportsCar("Ferrari", "458 Italia", "Gasoline", 210)
print(sports_car1.display_sports_car_info())
